<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pos_config_view_form_inherit_line_discount_selection" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.line.discount.selection</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos-loyalty']" position="before">
                <div class="col-xs-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_manual_discount_selection"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_manual_discount_selection"/>
                        <div class="text-muted">
                            Enable Manual Discount Selection
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
