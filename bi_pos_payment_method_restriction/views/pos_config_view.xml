<odoo>
  <record id="pos_config_view_form_inherited_payment_restriction" model="ir.ui.view">
    <field name="name">pos.config.view.form.inherited.payment.restriction</field>
    <field name="model">pos.config</field>
    <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[4]" position="after">
        <div class="row mt16 o_settings_container" id="session_config">
          <div class="col-xs-12 col-md-6 o_setting_box">
            <div class="o_setting_right_pane">
              <label for="pwd_payment_method" string="Password to Allow Payment Method"/>
              <div class="text-muted">
                Password to Allow selecting payment method for credit note.
              </div>
              <div class="content-group mt16">
                <field name="pwd_payment_method"/>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
